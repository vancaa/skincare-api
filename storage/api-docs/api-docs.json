        "/api/register": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Register pengguna baru",
                "operationId": "8a56853624e025573120a09a4c75d468",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Admin Vanessa"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "admin.vanessa@email.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "admin123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Berhasil register dan dapat token"
                    },
                    "400": {
                        "description": "Gagal register"
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "Authentication"
